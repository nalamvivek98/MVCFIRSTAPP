@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string d_ReleaseDate = Model.Releasedate.Value.ToString("dddd,MMMM dd,yyyy");
    string d_DateAdded = Model.DateAdded.Value.ToString("dddd,MMMM dd,yyyy");

}
<h2>@Model.Name</h2>
<ul>
    <li>Genre:@Model.GenreType.Name</li>
    <li>Release Date:@d_ReleaseDate</li>
    <li>Date Added:@d_DateAdded</li>
    <li>Number in stock:@Model.No_in_stock</li>
</ul>


